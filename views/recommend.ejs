<%- include( "includes/head") %>
    <link rel="stylesheet" href="/styles/recommend.css" />

  </head>
  <body>
   <%- include( "includes/header") %>
   <%- include( "includes/sideDrawer") %>
    <main>
      <h1 class="heading">Share your favorite restaurant</h1>
      <form id="form" action="/recommend" method="POST">
        <p>
          <label for="name">Restaurant name</label>
          <input type="text" id="name" name="name" required />
        </p>
        <p>
          <label for="address">Address</label>
          <input type="text" id="address" name="address" required />
        </p>
        <p>
          <label for="type">Type of cuisine</label>
          <input type="text" id="type" name="type" required />
        </p>
        <p>
          <label for="webiste">Restaurant webiste</label>
          <input type="text" id="website" name="website" required />
        </p>
        <p>
          <label for="description">Why do you recommend it</label>
          <textarea id="description" name="description" rows="3"></textarea>
        </p>
        <p>
          <label for="author">Discovered by</label>
          <input type="text" id="author" name="author" required />
        </p>
        <button>Share Restaurant</button>
      </form>
    </main>
<%- include( "includes/footer") %>
